<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/activity_hydro_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_welcome_message"
        android:fontFamily="@font/antipasto_light"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:text="Hi There!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        android:id="@+id/home_activity_top_divider"
        app:layout_constraintTop_toBottomOf="@id/home_welcome_message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/counter_preface_message"
        android:fontFamily="@font/antipasto_light"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:text="You've hydrated yourself,"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_activity_top_divider"
        android:layout_marginTop="110dp"
        android:layout_marginRight="130dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/counter_text"
        android:textSize="110sp"
        android:textColor="#00F6C0"
        android:text="120"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/counter_preface_message"
        android:layout_marginTop="60dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/counter_post_message"
        android:fontFamily="@font/antipasto_light"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:text="times today!"
        app:layout_constraintLeft_toLeftOf="@id/counter_preface_message"
        app:layout_constraintTop_toBottomOf="@id/counter_text"
        android:layout_marginTop="80dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/counter_post_message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="View Hydration history"
        android:id="@+id/history_activity_button"
        android:paddingLeft="120px"
        android:paddingRight="120px"
        />




</androidx.constraintlayout.widget.ConstraintLayout>